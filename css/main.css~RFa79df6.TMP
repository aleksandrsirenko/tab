.navbar {
      text-align: center;
      margin-bottom: 50px;
      }
.register-links {
    color: #ffffff;
    font-size: 16px;
    margin-top: 20px;
}
.container-fluid {
      display: inline-block;
      }
.mb60 {
    margin-bottom: 60px;
}

.task-row {
    border-bottom: 1px solid #DDDDDD;
    padding: 20px 0;
    margin: 0;
}

.task-row:first-child {
    padding-top: 5px;
}

.task-row:last-child {
    border: none;
}

.task-row i {
    display: none;
}
.task-row:hover .remove-icon {
    display: inline;
    color: red;
}

.completed label {
text-decoration: line-through;
color: #DDDDDD;
}


#newTask {
    position: relative;
}
#newTask .error-message {
    position: absolute;
    top: 35px;
    left: 0;
    color: #FF465F;
}


.error-alert {
    position: absolute;
    top: 15%;
    left: 40%;
    width: 250px;
    z-index: 3010;
}

.blocked {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #000;
    opacity: 0.5;
    z-index: 3000;
}
